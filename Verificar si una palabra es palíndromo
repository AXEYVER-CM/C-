#include <iostream>
#include <string>
using namespace std;

int main() {
    string palabra, reversa;
    cout << "Ingrese una palabra: ";
    cin >> palabra;
    reversa = string(palabra.rbegin(), palabra.rend());
    cout << "¿Es palíndromo? " << (palabra == reversa ? "Sí" : "No") << endl;
    return 0;
}
